<html>
  <head>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function sendGet() {
            var form = document.getElementById("form-info");
            //form.name.value - form의 네임 속성 값을 가져올 수 있다. 
            //form.age.value
            axios({
                method:'get',
                url:"/form",
                params: {name: form.name.value}
            }).then(function(res) {
                //res.data = {msg: ~~~ }
                alert(res.data.msg);
            })
        }

        function sendPost() {
            var form = document.getElementById("form-info");
            axios({
                method:'post',
                url:"/form",
                data: {name: form.name.value}
            }).then(function(res) {
                alert(res.data.msg);
        })
    }
    </script>
</head>

  <body>
    <button type="button" onclick="sendGet()">get</button>
    <button type="button" onclick="sendPost()">post</button>
    <form  id="form-info" >
        <input type="text" name="name">
    </form>
  </body>
</html>
