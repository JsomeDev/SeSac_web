<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>실습34-fetch</title>

    <script>
      function sendPost() {
        var form = document.getElementById("form-info");
        var message = document.querySelector("p")
        fetch("/fetch", {
            method: "post",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                id: form.id.value,
                password: form.password.value
            })
        })
        .then(function(response) { 
            return( response.json());
        })
        .then(function(res) {
            message.innerText = res.msg;
            message.style.color = res.color;
        })
      }
    </script>
</head>

  <body>
    <form id="form-info">
      <div>
        <input type="text" name="id" placeholder="ID" required />
      </div>
      <div>
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div>
        <p></p>
      </div>
      <button type="button" onclick="sendPost()">login</button>
    </form>
  </body>
</html>
