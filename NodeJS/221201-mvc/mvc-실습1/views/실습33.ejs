<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>실습33</title>

    <script>
      function sendPost() {
        var form = document.getElementById("form-info");
        axios({
          method: "post",
          url: "/form",
          data: { id: form.id.value, password: form.password.value },
        }).then(function (res) {
          var message = document.querySelector("p");
          message.innerText = res.data.msg;
          message.style.color = res.data.color;
        });
      }
    </script>
  </head>

  <body>
    <form id="form-info">
      <div>
        <input type="text" name="id" placeholder="ID" required />
      </div>
      <div>
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div>
        <p></p>
      </div>
      <button type="button" onclick="sendPost()">login</button>
    </form>
  </body>
</html>
